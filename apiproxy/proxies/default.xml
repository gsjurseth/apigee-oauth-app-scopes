<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>verify-oauth-v2-access-token</Name>
            </Step>
            <Step>
                <Name>remove-header-authorization</Name>
            </Step>
            <Step>
                <Name>impose-quota</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="read">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <Name>AssignMessage.SetPayload</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/read") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="write">
            <Description>write</Description>
            <Request/>
            <Response>
                <Step>
                    <Name>AssignMessage.SetPayload</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/write") and (request.verb = "POST")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/scopecase</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>
